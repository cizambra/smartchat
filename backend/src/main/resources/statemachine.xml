<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="questionMatched"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.main.QuestionMatched">
        <constructor-arg ref="knowledgeBase"/>
    </bean>

    <bean id="messageReceived"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.main.MessageReceived"/>

    <bean id="noQuestionMatched"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.main.NoQuestionMatched"/>

    <bean id="knowledgeBase"
          class="com.pxw.smartchat.model.knowledge.base.rdf.RDFKnowledgeBase">
        <constructor-arg ref="baseConnection"/>
    </bean>

    <bean id="baseConnection" class="com.pxw.smartchat.model.knowledge.base.rdf.RDFConnection"/>
</beans>