<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="questionMatched"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.main.QuestionMatched"/>

    <bean id="messageReceived"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.main.MessageReceived">
        <constructor-arg name="librarian" ref="plainLibrarian"/>
        <constructor-arg name="parser" ref="questionParser" />
    </bean>

    <bean id="noQuestionMatched"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.main.NoQuestionMatched"/>

    <bean id="whatQuestionFound"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.what.WhatQuestionFound"/>

    <bean id="whichQuestionFound"
          class="com.pxw.smartchat.model.processing.statemachine.component.state.which.WhichQuestionFound"/>

    <bean id="plainLibrarian" class="com.pxw.smartchat.model.processing.librarian.impl.PlainLibrarian"/>
    <bean id="questionParser" class="com.pxw.smartchat.model.processing.parser.impl.QuestionParser"/>
</beans>